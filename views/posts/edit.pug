extends ../partials/layout

block content
    div
        a(href='/posts') 뒤로가기

    form(action='/posts/<%= post._id %>?_method=put', method='post')
        div
            h3 글수정
                fieldset
                div
                    label(for="title") 제목
                    div
                        input#title(type="text", name="title")
                    div
                        label(for="body") 요청사항
                        div
                            textarea#body(name="body", cols="30", rows="10")<%= post.body %>
    div
        button(type='submit') 글올리기