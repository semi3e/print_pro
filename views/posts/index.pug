extends ../partials/layout

block content
    div
        a(href='/posts/new') 글쓰기
    table
        thead
            tr
                th 제목
                th 내용
   
        tbody       
            each p in posts
                tr
                    td=p.title
                    td=p.body
                    if p.allblack=="on" 
                        td 흑백
                    else
                        td 컬러
                    if p.double_side=="on"
                        td 양면
                    else
                        td 단면